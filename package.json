    "history": "^4.9.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jsdom": "^15.1.1",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "npm-watch": "^0.6.0",
    "nyc": "^14.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prismjs": "^1.17.1",
    "raf": "^3.4.1",
